<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    app:cardElevation="4dp"
                                    android:id="@+id/cvKlik"
                                    app:cardCornerRadius="4dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:layout_width="50dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/buku"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">


            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="20dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="Nama MK"
                      android:id="@+id/listNamaMatakuliahDosenJadwal"
                      android:textColor="@android:color/black"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="12dp"
                      android:fontFamily="sans-serif-medium"
                      android:gravity="center"
                      android:text="Nama Dosen"
                      android:id="@+id/listNamaDosenJadwal"
                      android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
        <TextView android:layout_width="70dp"
                  android:layout_height="match_parent"
                  android:textSize="10dp"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center"
                  android:text="MINGGU 14:30 GP 601"
                  android:id="@+id/listNamaHariJadwal"
                  android:layout_marginRight="8dp"
                  android:textColor="@android:color/holo_red_light"/>

        <View android:layout_width="5dp" android:layout_height="match_parent"
              android:background="@color/colorPrimary"/>

    </LinearLayout>


</android.support.v7.widget.CardView>